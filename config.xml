<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.knx" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Check your battery</name>
    <description>
        Battery status
    </description>
    <author email="brendarychter@gmail.com" href="http://www.responsivewebdesign.com.ar">
        Brenda Rychter
    </author>
    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="6.1.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    
    <!--deprecated gap:plugin-->
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <plugin name="cordova-plugin-battery-status" spec="1.1.0" source="pgb" />

    <icon src="img/data/icon.png" />
    <icon platform="android" qualifier="ldpi" src="img/data/res/icon/android/icon-36-ldpi.png" />
    <icon platform="android" qualifier="mdpi" src="img/data/res/icon/android/icon-48-mdpi.png" />
    <icon platform="android" qualifier="hdpi" src="img/data/res/icon/android/icon-72-hdpi.png" />
    <icon platform="android" qualifier="xhdpi" src="img/data/res/icon/android/icon-96-xhdpi.png" />
    <icon platform="blackberry" src="img/data/res/icon/blackberry/icon-80.png" />
    <icon platform="blackberry" state="hover" src="img/data/res/icon/blackberry/icon-80.png" />
    <icon platform="ios" height="57" src="img/data/res/icon/ios/icon-57.png" width="57" />
    <icon platform="ios" height="72" src="img/data/res/icon/ios/icon-72.png" width="72" />
    <icon platform="ios" height="114" src="img/data/res/icon/ios/icon-57-2x.png" width="114" />
    <icon platform="ios" height="144" src="img/data/res/icon/ios/icon-72-2x.png" width="144" />
    <icon platform="webos" src="img/data/res/icon/webos/icon-64.png" />
    <icon platform="winphone" src="img/data/res/icon/windows-phone/icon-48.png" />
    <icon platform="winphone" role="background" src="img/data/res/icon/windows-phone/icon-173.png" />
    <splash platform="android" qualifier="port-ldpi" src="img/data/res/screen/android/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="port-mdpi" src="img/data/res/screen/android/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="port-hdpi" src="img/data/res/screen/android/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="port-xhdpi" src="img/data/res/screen/android/screen-xhdpi-portrait.png" />
    <splash platform="blackberry" src="img/data/res/screen/blackberry/screen-225.png" />
    <splash platform="ios" height="480" src="img/data/res/screen/ios/screen-iphone-portrait.png" width="320" />
    <splash platform="ios" height="960" src="img/data/res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
    <splash platform="ios" height="1136" src="img/data/res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
    <splash platform="ios" height="1024" src="img/data/res/screen/ios/screen-ipad-portrait.png" width="768" />
    <splash platform="ios" height="768" src="img/data/res/screen/ios/screen-ipad-landscape.png" width="1024" />
    <splash platform="winphone" src="img/data/res/screen/windows-phone/screen-portrait.jpg" />
    <access origin="*" />
</widget>